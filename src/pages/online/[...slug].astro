    function getCompatStatus(status) {
  switch (status) {
    case "Not tested":
      return `<i class='fa fa-circle-question' style='color:gray;'></i> ${status}`;
    case "Gameplay works":
      return `<i class='fa fa-circle-check' style='color:green;'></i> ${status}`;
    case "Login fail":
